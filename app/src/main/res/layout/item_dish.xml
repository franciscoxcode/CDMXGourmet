<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- 🏷️ Nombre del platillo (izquierda) -->
    <TextView
        android:id="@+id/dishNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del platillo"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dishPriceTextView"
        app:layout_constraintHorizontal_bias="0"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- 💰 Precio (derecha) -->
    <TextView
        android:id="@+id/dishPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0 MXN"
        android:textSize="14sp"
        android:textColor="#009688"
        app:layout_constraintTop_toTopOf="@id/dishNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/dishNameTextView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
